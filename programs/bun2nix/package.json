{
  "name": "bun2nix",
  "version": "2.0.0",
  "module": "index.js",
  "bin": "index.js",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "postinstall": "bun2nix -o bun.nix",
    "build:wasm": "RUSTFLAGS=\"\" wasm-pack build --target nodejs --out-dir ./dist --out-name bun2nix-wasm --no-pack",
    "build": "bun run build:wasm && bun run scripts/prepare.ts",
    "start": "bun run build && bun run dist/index.js"
  },
  "type": "module",
  "dependencies": {
    "sade": "^1.8.1"
  }
}
